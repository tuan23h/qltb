<UserControl x:Class="qltb.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="15">
            <TextBlock Text="THỐNG KÊ TRANG BỊ" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Statistics Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Tổng quan -->
                <TextBlock Text="Tổng quan" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"/>

                <UniformGrid Columns="4" Rows="1" Margin="0,0,0,30">
                    <!-- Total Items -->
                    <Border Background="#3498DB" 
                            CornerRadius="5" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="📦" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtTotalItems" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Tổng số trang bị" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Weapons -->
                    <Border Background="#E74C3C" 
                            CornerRadius="5" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="🔫" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtWeapons" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Vũ khí" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Ammunition -->
                    <Border Background="#F39C12" 
                            CornerRadius="5" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="💣" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtAmmunition" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Đạn dược" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Gear -->
                    <Border Background="#27AE60" 
                            CornerRadius="5" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="🎒" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtGear" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Trang bị khác" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Trạng thái -->
                <TextBlock Text="Theo trạng thái" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"/>

                <UniformGrid Columns="3" Rows="1">
                    <!-- Available -->
                    <Border Background="#2ECC71" 
                            CornerRadius="5" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="✅" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtAvailable" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Sẵn sàng" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- In Use -->
                    <Border Background="#3498DB" 
                            CornerRadius="5" 
                            Padding="20" 
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="🔄" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtInUse" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Đang sử dụng" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Maintenance -->
                    <Border Background="#E67E22" 
                            CornerRadius="5" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="🔧" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtMaintenance" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Bảo trì" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>