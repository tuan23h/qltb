<UserControl x:Class="qltb.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.05" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊 DASHBOARD THỐNG KÊ" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBlock Text="(Click vào mỗi thẻ để xem danh sách chi tiết)" 
                           FontSize="11" 
                           FontStyle="Italic"
                           Foreground="#E0E0E0"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Statistics Cards -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="#F5F5F5">
                <StackPanel Margin="20">
                    <!-- Tổng quan -->
                    <TextBlock Text="Tổng quan" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <!-- Total Items -->
                    <Border Background="#3498DB" 
                            Style="{StaticResource StatCardStyle}"
                            Margin="0,0,0,10"
                            MouseLeftButtonDown="TotalCard_Click"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="📦" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtTotalItems" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Tổng số trang bị" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Weapons -->
                    <Border Background="#E74C3C" 
                            Style="{StaticResource StatCardStyle}"
                            Margin="0,0,0,10"
                            MouseLeftButtonDown="WeaponsCard_Click"
                            Tag="Weapon"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="🔫" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtWeapons" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Vũ khí" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Ammunition -->
                    <Border Background="#F39C12" 
                            Style="{StaticResource StatCardStyle}"
                            Margin="0,0,0,10"
                            MouseLeftButtonDown="AmmunitionCard_Click"
                            Tag="Ammunition"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="💣" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtAmmunition" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Đạn dược" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Gear -->
                    <Border Background="#27AE60" 
                            Style="{StaticResource StatCardStyle}"
                            Margin="0,0,0,30"
                            MouseLeftButtonDown="GearCard_Click"
                            Tag="Gear"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="🎒" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtGear" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Trang bị khác" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Trạng thái -->
                    <TextBlock Text="Theo trạng thái" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <!-- Available -->
                    <Border Background="#2ECC71" 
                            Style="{StaticResource StatCardStyle}"
                            Margin="0,0,0,10"
                            MouseLeftButtonDown="AvailableCard_Click"
                            Tag="Sẵn sàng"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="✅" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtAvailable" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Sẵn sàng" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- In Use -->
                    <Border Background="#3498DB" 
                            Style="{StaticResource StatCardStyle}"
                            Margin="0,0,0,10"
                            MouseLeftButtonDown="InUseCard_Click"
                            Tag="Đang sử dụng"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="🔄" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtInUse" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Đang sử dụng" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Maintenance -->
                    <Border Background="#E67E22" 
                            Style="{StaticResource StatCardStyle}"
                            MouseLeftButtonDown="MaintenanceCard_Click"
                            Tag="Bảo trì"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="🔧" FontSize="32" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtMaintenance" 
                                       Text="0" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Bảo trì" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel: Detail List -->
            <Border Grid.Column="1" Background="White" BorderBrush="#DEE2E6" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detail Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="15" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                        <TextBlock x:Name="TxtDetailTitle" 
                                   Text="Chọn một thẻ để xem danh sách chi tiết" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#495057"/>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" 
                              x:Name="DetailDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              AlternatingRowBackground="#F8F9FA"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              BorderThickness="0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="QR Code" Binding="{Binding QRCode}" Width="120"/>
                            <DataGridTextColumn Header="Tên trang bị" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Loại" Binding="{Binding Category}" Width="120"/>
                            <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="130"/>
                            <DataGridTextColumn Header="Vị trí" Binding="{Binding Location}" Width="150"/>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#495057"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderBrush" Value="#343A40"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>