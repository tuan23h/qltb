<Window x:Class="qltb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hệ thống Quản lý Trang bị"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Menu Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,0,1"
                                BorderBrush="#2C3E50">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo và tiêu đề -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="⚔️" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="HỆ THỐNG QUẢN LÝ TRANG BỊ" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Thông tin user -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding CurrentUserName}" 
                               Foreground="White" 
                               FontSize="13"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <Button Content="Đăng xuất" 
                            Command="{Binding LogoutCommand}"
                            Background="#E74C3C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,5"
                            Cursor="Hand"
                            FontSize="12">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E74C3C"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Menu -->
            <Border Grid.Column="0" Background="#34495E" BorderBrush="#2C3E50" BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">
                    <!-- Menu Items -->
                    <Button Command="{Binding NavigateToListCommand}"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Danh sách trang bị" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding NavigateToScanCommand}"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📷" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Quét QR Code" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding NavigateToStatisticsCommand}"
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Thống kê" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="#ECF0F1" Padding="10">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="10">
            <TextBlock Text="© 2025 Hệ thống Quản lý Trang bị | Phiên bản 2.0" 
                       Foreground="White" 
                       FontSize="11"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>