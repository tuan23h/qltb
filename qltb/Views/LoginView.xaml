<Window x:Class="qltb.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập - Quản lý trang bị"
        Height="800" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Border Background="White" 
                CornerRadius="10" 
                Margin="30"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="#2E3A59" Opacity="0.2" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <!-- Logo/Icon -->
                <Viewbox Width="80" Height="80" Margin="0,0,0,20">
                    <Canvas Width="24" Height="24">
                        <Path Fill="#2E3A59" Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z"/>
                    </Canvas>
                </Viewbox>

                <TextBlock Text="QUẢN LÝ TRANG BỊ" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#2E3A59"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Đăng nhập hệ thống" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Foreground="Gray"
                           Margin="0,0,0,30"/>

                <!-- Username -->
                <TextBlock Text="Tên đăng nhập" 
                           Foreground="#2E3A59" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtUsername" 
                         Height="35"
                         Padding="10,8"
                         FontSize="14"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Margin="0,0,0,15"
                         KeyDown="TxtUsername_KeyDown"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" 
                           Foreground="#2E3A59" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="TxtPassword" 
                             Height="35"
                             Padding="10,8"
                             FontSize="14"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Margin="0,0,0,20"
                             KeyDown="TxtPassword_KeyDown"/>

                <!-- Error Message -->
                <TextBlock x:Name="TxtError" 
                           Foreground="Red" 
                           FontSize="12"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           Margin="0,0,0,10"/>

                <!-- Login Button -->
                <Button Content="ĐĂNG NHẬP" 
                        Height="40"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#2E3A59"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2E3A59"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3E4A69"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Help Text -->
                <TextBlock HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           FontSize="11"
                           Foreground="Gray">
                    <Run Text="Mặc định: "/>
                    <Run Text="admin/Admin@123" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>