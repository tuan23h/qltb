<Window x:Class="qltb.Views.EquipmentEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin trang bị"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="15">
            <TextBlock x:Name="TxtTitle" 
                       Text="THÊM TRANG BỊ MỚI" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- QR Code -->
                <TextBlock Text="QR Code *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtQRCode" Height="35" Padding="8" Margin="0,0,0,15"/>

                <!-- Tên -->
                <TextBlock Text="Tên trang bị *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtName" Height="35" Padding="8" Margin="0,0,0,15"/>

                <!-- Loại -->
                <TextBlock Text="Loại *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbCategory" Height="35" Padding="8" Margin="0,0,0,15"/>

                <!-- Số lượng -->
                <TextBlock Text="Số lượng *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtQuantity" Height="35" Padding="8" Margin="0,0,0,15"/>

                <!-- Trạng thái -->
                <TextBlock Text="Trạng thái" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbStatus" Height="35" Padding="8" Margin="0,0,0,15">
                    <ComboBoxItem Content="Sẵn sàng"/>
                    <ComboBoxItem Content="Đang sử dụng"/>
                    <ComboBoxItem Content="Bảo trì"/>
                    <ComboBoxItem Content="Hỏng"/>
                </ComboBox>

                <!-- Vị trí -->
                <TextBlock Text="Vị trí" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtLocation" Height="35" Padding="8" Margin="0,0,0,15"/>

                <!-- Thông số kỹ thuật -->
                <Border BorderBrush="#CED4DA" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,10,0,15">
                    <StackPanel>
                        <TextBlock Text="THÔNG SỐ KỸ THUẬT" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Cỡ đạn / Khẩu kính" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtCaliber" Height="35" Padding="8" Margin="0,0,0,10"/>

                        <TextBlock Text="Khối lượng" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtWeight" Height="35" Padding="8" Margin="0,0,0,10"/>

                        <TextBlock Text="Tầm bắn / Tầm sử dụng" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtRange" Height="35" Padding="8" Margin="0,0,0,10"/>

                        <TextBlock Text="Vật liệu" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtMaterial" Height="35" Padding="8"/>
                    </StackPanel>
                </Border>

                <!-- Tính năng kỹ chiến thuật -->
                <Border BorderBrush="#CED4DA" BorderThickness="1" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="TÍNH NĂNG KỸ - CHIẾN THUẬT" FontWeight="Bold" HorizontalAlignment="Left"/>
                            <Button Content="+ Thêm" 
                                    HorizontalAlignment="Right"
                                    Background="#28A745"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="10,5"
                                    Cursor="Hand"
                                    Click="BtnAddFeature_Click"/>
                        </Grid>

                        <ListBox x:Name="LstFeatures" 
                                 Height="150" 
                                 Margin="0,10,0,0"
                                 BorderBrush="#CED4DA">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Description}" 
                                                   TextWrapping="Wrap" 
                                                   Margin="5"/>
                                        <Button Grid.Column="1" 
                                                Content="✕" 
                                                Background="Transparent"
                                                Foreground="Red"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="BtnRemoveFeature_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="💾 Lưu" 
                        Width="100" 
                        Height="35"
                        Background="#007BFF"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="BtnSave_Click"/>

                <Button Content="❌ Hủy" 
                        Width="100" 
                        Height="35"
                        Background="#6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>